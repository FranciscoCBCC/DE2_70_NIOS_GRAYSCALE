void VGA_box (int, int, int, int);

int main(void){
	VGA_box (0, 0, 319, 239);
}

void VGA_box(int x1, int y1, int x2, int y2)
{
	int offset, row, col;
	/* Declare volatile pointer to pixel buffer (volatile means that IO load
	   and store instructions will be used to access these pointer locations,
	   instead of regular memory loads and stores) */
	volatile short * SDRAM = (volatile short *) 0x00000000;	// VGA pixel buffer address

	volatile short * sram = (short *)  0x02000000;


	/* assume that the box coordinates are valid */
	for(row = y1; row <= y2; row++){
		for(col = x1; col <= x2; col++){
			offset = (row << 9) + col;
			*(SDRAM + offset) = *(sram + offset);	// compute halfword address, set pixel
		}
	}
}
